{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "clone tabnews (https://www.tabnews.com.br/)",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest  \"next dev\" \"jest --runInBand\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "lint:secretlint:check": "npx secretlint --maskSecrets \"**/*\"",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "crc": "4.3.2",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "next": "14.2.8",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.6.1",
    "pg": "8.12.0",
    "qrcode.react": "4.2.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "swr": "2.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.1",
    "@commitlint/config-conventional": "19.4.1",
    "@secretlint/secretlint-rule-no-dotenv": "8.2.4",
    "@secretlint/secretlint-rule-preset-recommend": "8.2.4",
    "autoprefixer": "10.4.20",
    "commitizen": "4.3.0",
    "concurrently": "9.0.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.8",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.3",
    "husky": "9.1.5",
    "jest": "29.7.0",
    "postcss": "8.4.49",
    "prettier": "3.3.3",
    "secretlint": "8.2.4",
    "tailwindcss": "3.4.16"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
